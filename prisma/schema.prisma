// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Tool {
  id          Int @default(autoincrement()) @id
  title       String
  link        String
  description String
  tags        Tag[]
}

model Tag {
  id    Int @default(autoincrement()) @id
  name  String
  tools Tool[]
}
